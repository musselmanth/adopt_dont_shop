<h1>New Application</h1>
<%= form_with url: '/applications', method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %><br>

  <%= f.label :street_address, "Street Address" %>
  <%= f.text_field :street_address, required: true %><br>

  <%= f.label :city %>
  <%= f.text_field :city, required: true %>

  <%= f.label :state %>
  <%= f.text_field :state, required: true %>

  <%= f.label :zip_code, "Zip Code" %>
  <%= f.number_field :zip_code, in: 0..99999, required: true %><br>

  <%= f.label :description, "Why would you make a good home for these pets?" %><br>
  <%= f.text_area :description, size: "70x5" %><br>

  <%= f.submit "Submit" %>

<% end %>
