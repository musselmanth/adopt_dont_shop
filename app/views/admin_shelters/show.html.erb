<h1><%= @shelter.find_city %> <%= @shelter.name %> Admin Page</h1>
<h2>Action Required</h2>
<% @action_needed_pets.each do |pet| %>
  <p id="pet-<%= pet.id %>">
  <strong><%= link_to pet.name, "/pets/#{pet.id}" %></strong><br>
  Pending Applications:
  <% pet.applications.each do |app| %>
    <br><%= link_to "#{app.name}'s Application", "/admin/applications/#{app.id}" %>
  <% end %>
  </p>
<% end %>
<h2>Statistics</h2>
<p>Count of Adoptable Pets: <%= @shelter.adoptable_pets_count %></p>
<p>Count of Adopted Pets: <%= @shelter.adopted_pets_count %></p>
<p>Average Pet Age: <%= @shelter.average_pet_age %></p>